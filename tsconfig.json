{
    "compilerOptions": {
        //"module": "commonjs",
        "target": "es2015",
        "module": "esnext",
        "allowJs": true,
        "skipLibCheck": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "strict": true,
        "sourceMap": true,
        "outDir": "example/dist",
        "esModuleInterop": true,
        "baseUrl": ".",
        "jsx": "react",
        "types": ["node", "jest"],
        "resolveJsonModule": true ,
        "lib": ["dom", "dom.iterable", "esnext"],
        "paths": {
            "*": ["node_modules/*", "src/types/*"],
            "@/*": ["example/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
